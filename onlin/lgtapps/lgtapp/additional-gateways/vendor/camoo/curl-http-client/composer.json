{
    "name": "camoo/curl-http-client",
    "description": "Simple Curl Http Client",
    "type": "library",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "psr/http-message": "^1.1",
        "camoo/http-header-parser": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "minimum-stability": "dev",
    "homepage": "https://www.camoo.hosting",
    "license": "MIT",
    "prefer-stable": true,
    "authors": [
        {
            "name": "CAMOO SARL",
            "email": "support@camoo.hosting"
        }
    ],
    "keywords": [
        "curl client",
        "http client",
        "PSR-7 http-client",
        "simple http client"
    ],
    "autoload": {
        "psr-4": {
            "Camoo\\Http\\Curl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Camoo\\Http\\Curl\\Test\\": "tests"
        }
    },

    "support": {
        "issues": "https://github.com/camoo/curl-http-client/issues",
        "source": "https://github.com/camoo/curl-http-client"
    }
}
